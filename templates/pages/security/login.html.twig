{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<main class="login_page login-form pt-3">

		<section class="container h-100 d-flex align-items-center justify-content-center flex-column">
			{% if app.user %}
				<div class="py-3 alert alert-info mb-5">
					Vous êtes déjà connecté :
					{{ app.user.userIdentifier }}<br/>
					<a href="{{ path('app_logout') }}">Déconnexion</a>
				</div>
			{% endif %}
			<form method="post" class="">
				{% if error %}
					<div class="alert alert-warning alert-dismissible fade show shadow">
						<i class="bi bi-exclamation-triangle me-2"></i>
						{{ error.messageKey|trans(error.messageData, 'security') }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
					{# <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
				{% endif %}


				<div class="user-login-icon">
					<img src="{{asset('build/images/user_login_icon.svg')}}" alt="icone login">
				</div>
				<h1 class="h3 mb-4 font-weight-normal text-center">Connexion</h1>
				<div class="input-group">
					<span class="input-group-text" id="email">
						<img src="{{asset('build/images/mail_icon.svg')}}" alt="icone email">
					</span>
					<input
					type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Email" aria-label="email" aria-describedby="email">
				{# <label for="inputEmail">Email</label> #}
				</div>
				<div class="input-group">
					<span class="input-group-text" id="password">
						<img src="{{asset('build/images/password_icon.svg')}}" alt="icone mot de passe">
					</span>
					<input
					type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe" aria-label="aria-label=" password" aria-describedby=" password"" aria-describedby="email">
				{# <label for="inputPassword">Mot de passe</label> #}
				</div>


				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
																																																																																																																																																																																																																																																																															        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																																																																																																																																																																																																																															        See https://symfony.com/doc/current/security/remember_me.html
																																																																																																																																																																																																																																																																															
																																																																																																																																																																																																																																																																															        <div class="checkbox mb-3">
																																																																																																																																																																																																																																																																															            <label>
																																																																																																																																																																																																																																																																															                <input type="checkbox" name="_remember_me"> Remember me
																																																																																																																																																																																																																																																																															            </label>
																																																																																																																																																																																																																																																																															        </div>
																																																																																																																																																																																																																																																																															    #}

				<button class="btn btn btn-primary w-100 mb-5" type="submit">
					Se connecter
				</button>
			</form>
		</section>

	</main>
{% endblock %}
