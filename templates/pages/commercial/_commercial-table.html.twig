<table class="table table-md-responsive table-striped table-hover table-dark">
	<thead>
		<tr>
			<th scope="col" class="ps-3 ps-xxl-5">ID</th>
			<th scope="col">Nom</th>
			<th scope="col">Prénom</th>
			<th scope="col">Email</th>
			<th scope="col">Date de création</th>
			<th scope="col">Date de mise à jour</th>
			{# <th scope="col">Statut</th> #}
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for commercial in commercials %}
			<tr>
				<th scope="row" class="align-middle ps-3 ps-xxl-5">{{commercial.id }}</th>
				<td class="align-middle">{{commercial.lastname }}</td>
				<td class="align-middle">{{commercial.firstname }}</td>
				<td class="align-middle">{{commercial.email }}</td>
				<td class="align-middle">{{ commercial.createdAt | date('d/m/Y') }}</td>
				<td class="align-middle">{{ commercial.updatedAt | date('d/m/Y') }}</td>
				{# <td class="align-middle">{{commercial.isActive ? '<span class="text-success">active</span>' : '<span class="text-danger">inactive</span>' }}</td> #}
				<td class="align-middle d-flex">
					<a href="{{ path('app_commercial_edit', {'slug': commercial.slug}) }}" class="btn btn-success me-3">
						<img src="{{ asset('build/images/edit_icon.svg') }}" alt="edit icon" class="edit-icon">
					</a>
					{# <a href="#" class="btn btn-danger me-3">
																										<img src="{{ asset('build/images/delete_icon.svg') }}" alt="delete icon" class="delete-icon"
																										</a> #}
					<form
						method="post" action="{{ path('app_commercial_delete', {'slug': commercial.slug}) }}" class="card-delete-btn me-3 ">
						{# <form method="post" action="{{ path('app_commercial_delete', {'id': commercial.id}) }}" class="card-delete-btn me-2 w-100"> #}
						<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commercial.id) }}">
						<button type="button" class="btn btn-danger text-secondary w-100">
							<img src="{{ asset('build/images/delete_icon.svg') }}" alt="delete icon" class="delete-icon">
						</button>
					</form>
					<a href="{{ path('app_commercial_show', {'slug': commercial.slug}) }}" class="btn btn-info">
						<img src="{{ asset('build/images/view_icon.svg') }}" alt="view icon" class="view-icon">
					</a>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table></td></tr>
