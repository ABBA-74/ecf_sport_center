{% if modeDisplay is defined %}
	{% if modeDisplay == 'table' %}
		{% set displayCards = 'd-none' %}
		{% set displayTable = '' %}
	{% else %}
		{% set displayTable = 'd-none' %}
		{% set displayCards = '' %}
	{% endif %}
{% else %}
	{% set displayCards = 'd-none' %}
	{% set displayTable = '' %}
{% endif %}
{% if commercials is defined and commercials|length > 0 %}
	<div id="" class="container-cards-commercial row m-0 p-0 {{ displayCards }}">
		{% include "pages/commercial/_commercial-card.html.twig" with {'commercials': commercials} only %}
	</div>
	<div id="" class="container-table-commercial row m-0 p-0 {{ displayTable }} mb-3">
		{% include "pages/commercial/_commercial-table.html.twig" with {'commercials': commercials} only %}
	</div>
	{% include "_partials/_pagination.html.twig" %}
{% else %}
	<div class="my-5 alert alert-warning text-center">Aucun enregistrement trouv√©</div>
{% endif %}
