{% extends 'base.html.twig' %}

{% block title %}Hello CommercialController!
{% endblock %}

{% block body %}
	{{dump(commercials)}}
	<div class="container">
		<div class="row">
			<div class="col">
				<h1 class="my-5 text-primary text-center">Liste des commerciaux</h1>
			</div>

			<div class="row">
				<table class="table table-striped table-hover table-dark">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Nom</th>
							<th scope="col">Prénom</th>
							<th scope="col">Email</th>
							<th scope="col">Téléphone</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for commercial in commercials %}
							<tr>
								<th scope="row">{{commercial.id }}</th>
								<td>{{commercial.lastname }}</td>
								<td>{{commercial.firstname }}</td>
								<td>{{commercial.email }}</td>
								<td>{{commercial.phone|formatPhone }}</td>
								<td>
									<a href="#" class="btn btn-success">Vue</a>
									<a href="#" class="btn btn-success">Supp</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>


			<div class="row">
				{% for commercial in commercials %}
					{# {{dump(commercial)}} #}
					<div class="col-12 col-md-4 col-xxl-3 mb-3">
						<div class="card" style="width: 19rem; height: 15rem">
							<div class="card-body bg-dark">
								<h4 class="card-title mb-3">{{commercial.lastname}}
									{{commercial.firstname }}</h4>
								<p class="mb-0">
									<span class="fw-bold">Email :<br/>
									</span>
									{{commercial.email}}</p>
							</p>
						</p>
						<p>
							Statut :
							{{commercial.isActive == 'true' ? 'Active' : 'Inactive'}}
						</p>

						<a href="#" class="btn btn-primary">Détails</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
